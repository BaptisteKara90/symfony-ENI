{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} | Test
{% endblock %}
{% block body %}
<h1>C'est le test ! YOUHOU</h1>

{# Création d'un variable #}
{% set name = "Batou" %}
<h2>Hello {{ name }}</h2>

{# Création d'un tableau #}
{% set colors = ["blue", "pink", "green", "yellow"] %}

{% for color in colors %}
    {% if loop.first and color == "blue" %}
        <div>Première couleur : {{ color }}</div>
    {% endif %}
    <div style = "color: {{ color }}">{{ color }} / {{ loop.index0 }}</div>
    {% else %}
    <div>Pas de couleur</div>
{% endfor %}

{% for i in 1..10 %}
    <div>{{ i }}</div>
{% endfor %}

{% for i in 'a'..'z' %}
    <span>{{ i }}</span>
{% endfor %}

{% set serie = {
    name : 'Arcane',
    year : 2024,
    director : 'Riot game'
} %}

<h3>{{ serie.name }}</h3>
<h3>{{ serie.year }}</h3>
<h3>{{ serie.director }}</h3>

{% for key, val in serie %}
<div>{{ key }} : {{ val }}</div>
{% endfor %}

{# Les filtres #}

<h2>Quelques filtres</h2>
<div>{{ name| upper }} : {{ name|length }}</div>
<div>{{ colors|join('-')|length }}</div>
<div>{{ "now"|date('d-m-Y') }}</div>


